<div class = "login">
  <div class="card">
    <div class="card-body">
      <h2 id = "headline">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "", class:'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end -%>
      <div class = "row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.submit "Log in", class:"btn btn-success btn-block" %>
          </div>
        </div>
        <% end %>

        <div class="col-md-3">
          <div class="form-group">
            <%= link_to "Sign up", new_user_registration_path, class: "btn btn-secondary btn-block" %>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <%= link_to "Back", :back, class:"btn btn-secondary btn-block" %>
          </div>
        </div>
      </div>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "side-link"%>
    </div>
  </div>
</div>