<h1>Portfolio Items</h1>


<a href="portfolio_resources/new">Create a new item!</a>
<%= link_to "Create a new item by Ruby link!", new_portfolio_resource_path %>
<% @portfolio_items.each do |portfolio_item| %>
<p><%= link_to portfolio_item.title, portfolio_resources_show_path(portfolio_item.id) %></p>
<p><%= portfolio_item.subtitle %></p>
<p><%= portfolio_item.body %></p>
<p><%= image_tag portfolio_item.main_image if !portfolio_item.main_image.nil? %></p>
<p><%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil?   %></p>
<%= link_to "Edit", edit_portfolio_resource_path(portfolio_item.id) %>
<%= link_to "Destroy", portfolio_resource_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

 
